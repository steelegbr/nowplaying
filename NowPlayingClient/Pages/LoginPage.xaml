<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="NowPlayingClient.Pages.LoginPage">

    <ScrollView>
        <VerticalStackLayout
            Padding="30,0"
            Spacing="25">
            <Label>
                Now Playing Updater
            </Label>
            <Button
                x:Name="LoginBtn"
                Text="Log In" 
                SemanticProperties.Hint="Starts the log in process"
                Command="{Binding LoginCommand}"
                HorizontalOptions="Fill" 
            />
        </VerticalStackLayout>
    </ScrollView>

</ContentPage>
