<DomainBlock>:
    size_hint_y: None
    Label:
        bold: True
        size_hint_x: 0.5
        text: "Domain"
    TextInput:
        id: domain
        multiline: False
        on_text: root.change_domain(self.text)
        size_hint_x: 1.0

<ClientIdBlock>:
    size_hint_y: None
    Label:
        bold: True
        size_hint_x: 0.5
        text: "Client ID"
    TextInput:
        id: client_id
        multiline: False
        on_text: root.change_client_id(self.text)
        size_hint_x: 1.0

<AuthActionBlock>:
    height: "45dp"
    size_hint_y: None
    Label:
        canvas.before:
            Color:
                rgba: root.state_colour
            Rectangle:
                size: self.size
                pos: self.pos
        bold: True
        font_size: 32
        size_hint_x: 1
        text: root.state_text
    Button:
        font_size: 32
        on_press: root.trigger_auth()
        size_hint_x: 0.5
        text: "Authenticate"

<NowPlayingFileChooser>:
    height: "45dp"
    size_hint_y: None
    Label:
        bold: True
        size_hint_x: 0.5
        text: "Now Playing File:"
    TextInput:
        id: path
        multiline: False
        readonly: True
        size_hint_x: 1.0
        text: root.path
    Button:
        font_size: 32
        on_press: root.choose_file()
        size_hint_x: 0.5
        text: "Browse"

<NowPlayingFileModal>:
    orientation: "vertical"
    FileChooserIconView:
        id: filechooser
    BoxLayout:
        size_hint_y: None
        height: 30
        Button:
            text: "Choose"
            on_release: root.select(filechooser.selection)
        Button:
            text: "Cancel"
            on_release: root.cancel()
<HomeView>:
    cols: 1
    padding: [5, 0]
    spacing: [0, 20]
    DomainBlock:
    ClientIdBlock:
    AuthActionBlock:
    NowPlayingFileChooser: